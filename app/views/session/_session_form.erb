<%= simple_form_for new_session, url: authorize_path do |f| %>

  <div class="form-inputs">
    <%= f.input :app_id, as: :string, input_html: { class: 'form-control' } %>
    <%= f.input :app_secret, as: :string, input_html: { class: 'form-control' } %>
    <%= f.input :url, as: :string, input_html: { class: 'form-control' } %>
    <%= f.input :scopes, as: :string, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>